# Database (same credentials as your Immich .env)
DB_PASSWORD=postgres
# DB_USERNAME=postgres
# DB_DATABASE_NAME=immich
DB_HOSTNAME=immich_postgres

# Paths to Immich's data directories on the host
# These must match the bind mounts in your Immich docker-compose.yml
UPLOAD_LOCATION=../immich-app/library
EXTERNAL_LIBRARY_DIR=../immich-app/external_library

# Container mount points — must match where Immich mounts these volumes
# Default is /usr/src/app/upload for data (standard Immich install)
# Check your Immich docker-compose.yml if thumbnails aren't found
# UPLOAD_LOCATION_MOUNT=/usr/src/app/upload
# EXTERNAL_LIBRARY_MOUNT=/external_library

# Immich API key (Account Settings -> API Keys)
IMMICH_API_KEY=

# Optional: tune sync interval (seconds)
# SYNC_INTERVAL_SECONDS=60
# LOG_LEVEL=INFO

# ─── Per-job config (legacy, env var mode) ────────────────────────────────────
# Prefer using config.yaml for multi-job setups. These env vars are used as
# fallback when config.yaml does not exist.
#
# Source user (User A) — the one who uploads photos
# SOURCE_USER_ID=
#
# Target user (User B) — receives synced copies
# TARGET_USER_ID=
#
# User B's external library ID
# TARGET_LIBRARY_ID=
#
# Path prefixes as they appear inside the Immich container
# SHARED_PATH_PREFIX=
# TARGET_PATH_PREFIX=
#
# Optional: Sync a user's internal library (app/web uploads) to another user
# UPLOAD_SOURCE_USER_ID=
# UPLOAD_TARGET_USER_ID=
# UPLOAD_TARGET_LIBRARY_ID=
# TARGET_UPLOAD_PATH_PREFIX=
#
# Optional: Add all synced assets to this album in the target account
# TARGET_ALBUM_ID=
