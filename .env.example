# Database (same credentials as your Immich .env)
DB_PASSWORD=postgres
# DB_USERNAME=postgres
# DB_DATABASE_NAME=immich

# Paths to Immich's data directories on the host
# These must match the bind mounts in your Immich docker-compose.yml
IMMICH_DATA_DIR=../immich-app/library
EXTERNAL_LIBRARY_DIR=../immich-app/external_library

# Immich API key (Account Settings -> API Keys)
IMMICH_API_KEY=

# Source user (User A) — the one who uploads photos
SOURCE_USER_ID=

# Target user (User B) — receives synced copies
TARGET_USER_ID=

# User B's external library ID
TARGET_LIBRARY_ID=

# Path prefix for shared assets in User A's library
# e.g., /external_library/user_a/shared/
SHARED_PATH_PREFIX=

# Path prefix for User B's library (assets remapped to this path)
# e.g., /external_library/user_b/shared/
TARGET_PATH_PREFIX=

# Optional: tune sync intervals (seconds)
# SYNC_INTERVAL_SECONDS=60
# SCAN_INTERVAL_SECONDS=300
# LOG_LEVEL=INFO
